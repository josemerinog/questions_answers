<%= provide(:title, 'Respuestas Contundentes Q&A') %>
<div id="ask">
	<h1>¿Quién Contesta mi pregunta?</h1>	
	<% if logged_in? %>
		<%= render "questions_form" %>
	<% else %>
		<br />
		<p> => Inicia sesión para poder hacer o contestar preguntas.</p>
	<% end %>
</div> <!-- end ask -->
<div id="questions">
	<h1>Lista de Preguntas Disponibles:</h1>
	<% if @questions.any? %>
		<ul>
			<%= render @questions, partial: "questions/question" %> 
		</ul>
		<%= will_paginate %>
	<% else %>
		<br />
		<p>No hay preguntas publicadas disponibles.</p>
	<% end %>
</div> <!-- end questions -->
